<div>
  <h5> <%= current_user.email %> </h5>
  <h4> Users </h4>
  <%= turbo_stream_from 'users' %>
  <div id="users">
    <%= render @users %>
  </div>
  <h4> Rooms </h4>
  <%= turbo_stream_from 'rooms' %>
  <div id="rooms">
    <%= render @rooms %>
  </div>
  <%= render "layouts/new_room_form" %>
  <div>
    <% if @single_room %>
      <div id="single_room">
      </div>
      <h4><%= @user&.email || @single_room.name %></h4>
      <%= turbo_stream_from @single_room %>
      <div id="messages">
        <%= render @messages %>
      </div>
      <%= render "layouts/new_message_form" %>
    <% end %>
  </div>
</div>
